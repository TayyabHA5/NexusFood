<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="backgroundTint">@color/btn_color</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextView" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="AccountsButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@null</item>
        <item name="iconGravity">textStart</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:strokeWidth">2</item>
        <item name="strokeColor">@color/strokeColor</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="linearLayout" parent="Theme.NexusFood">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CreateAccountButtonStyle" parent="">
        <item name="android:layout_width">80dp</item>
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/strokeColor</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Large</item>
        <item name="contentPadding">25dp</item>
    </style>

    <style name="CircleImage" parent="">
        <item name="cornerSize">50%</item>

    </style>



    <style name="ShapeAbleImageView" parent="">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:padding">10dp</item>
        <item name="strokeWidth">1dp</item>

    </style>


</resources>